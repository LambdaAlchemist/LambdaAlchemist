[user]
	name = Guilherme M. Miranda
	email = alchemist.software@proton.me
	useConfigOnly = true
[init]
	defaultBranch = main
[core]
	editor = vim
	pager = less
	autocrlf = input
	eol = lf
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths = false
	branch = true
	short = true
	aheadBehind = true
	showStash = true
	showUntrackedFiles = normal
[log]
	date = iso8601
[push]
	default = current
	followTags = true
[pull]
	rebase = false
[merge]
	conflictstyle = diff3
[help]
	format = man
	browser = man
	autoCorrect = prompt
[credential "https://github.com"]
	helper = !gh auth git-credential
[credential "https://gist.github.com"]
	helper = !gh auth git-credential
[alias]
	lg = !git config --global --list | sed '/^alias/d'
	la = !git config --global --get-regexp alias | sed 's/alias\\.//g'
	le = !git la | awk '{printf \"| %-12s | %s\\n\", $1, $0}' | sed '1,3d'

	stat = !git status -uall
	aa = !git add --all && git status

	dica = !git diff --cached
	comm = !git commit --message
	quic = !git commit --message "changes"
	undo = !git reset --soft HEAD^
	reve = !git remote --verbose
	main = !git checkout main
	prev = !git checkout -
	chek = !git checkout $1

	log4me   = !git log --decorate --oneline --graph
	log2push = !git log origin/main..main --stat --no-merges
	log1prev = !git log -1 HEAD --stat

	stash4later = !git stash --include-untracked
	fetch2date  = !git stash --include-untracked && git fetch && git status
	bring2date  = !git pull && git status

	hub      = !git clone https://github.com/$1
	hub-self = !git clone https://github.com/lambda-alchemist/$1
	hub-conf = !git clone https://github.com/lambda-alchemist/.dotfiles.git

	lab      = !git clone https://gitlab.com/$1
	lab-self = !git clone https://gitlab.com/alkemista1/$1
	lab-conf = !git clone https://gitlab.com/alkemista1/dotfiles.git

	cleanmain = !git fetch origin && !git reset --hard origin/main && !git clean -df
	toptal = "!_toptal() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; _toptal"
