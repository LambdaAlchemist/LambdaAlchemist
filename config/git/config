[user]
	name  = Guilherme M. Miranda
	email = alchemist.software@proton.me
[init]
	defaultBranch = main
[core]
	editor   = vim
	pager    = less
	eol      = lf
	autocrlf = input
	safecrlf = true
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths      = false
	branch             = true
	aheadBehind        = true
	showStash          = true
	showUntrackedFiles = normal
[log]
	date           = iso8601
	decorate       = short
	showSignatures = true
[diff]
	tool    = nvimdiff
	guitool = nvimdiff
[diff "hex"]
	textconv = hexdump -v -C
	binary = true
[push]
	default         = current
	autoSetupRemote = true
[pull]
	ff     = true
	rebase = false
[merge]
	log           = false
	ff            = true
	tool          = nvimdiff
	guitool       = nvimdiff
	conflictstyle = diff3
[help]
	format      = man
	browser     = man
	autoCorrect = prompt
[alias]
	ls-config = config --list --global

	st = status --short --branch --ahead-behind --untracked-files=all
	dw = diff   --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'

	co      = checkout
	br      = branch
	br-all  = branch --list --remotes --all --verbose --verbose
	br-del  = branch --delete

	url     = remote --verbose --verbose
	url-get = remote get-url --all
	url-set = remote set-url
	url-add = remote set-url --add

	log-all  = log --oneline --graph --decorate=full
	log-stat = log --oneline --graph --stat --decorate=full
	log-prev = log --stat --decorate=full --full-diff --max-count=1 HEAD~1
