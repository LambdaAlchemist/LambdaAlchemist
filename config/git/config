[user]
	name  = Guilherme M. Miranda
	email = alchemist.software@proton.me
[init]
	defaultBranch = main
[core]
	editor   = nvim
	pager    = less
	eol      = lf
	autocrlf = input
	safecrlf = true
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths      = false
	branch             = true
	aheadBehind        = true
	showStash          = true
	showUntrackedFiles = normal
[log]
	date           = iso8601
	decorate       = short
	showSignatures = true
[diff]
	tool    = nvimdiff
	guitool = nvimdiff
[push]
	default         = current
	autoSetupRemote = true
[pull]
	ff     = true
	rebase = false
[merge]
	log           = false
	ff            = true
	tool          = nvimdiff
	guitool       = nvimdiff
	conflictstyle = diff3
[help]
	format      = man
	browser     = man
	autoCorrect = prompt
[alias]
	ls-config = !git config --list --global

	st = status --short --branch --ahead-behind --untracked-files=all
	aa = add    --all
	ca = commit --amend
	cm = commit --message
	dw = diff   --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'

	cb      = checkout
	cb-prev = checkout -
	cb-new  = checkout -b
	cb-all  = branch --list --all
	cb-url  = branch --list --remotes
	cb-del  = branch --delete

	url     = remote
	url-all = remote --verbose
	url-get = remote get-url --all origin
	url-set = remote set-url origin
	url-add = remote set-url --add

	log-all  = log --oneline --graph
	log-stat = log --oneline --graph --stat
	log-prev = log --stat --decorate=full --full-diff --max-count=1 HEAD~1

	toptal = "!_toptal() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; _toptal"
