#
# Description:
#     Simple Midi playback
#


# Bash strict mode - Early exit, instead of failing later
set -o errtrace
set -o errexit
set -o nounset
set -o pipefail

XDG_DATA_HOME="${XDG_DATA_HOME:-"${HOME}/.local/share"}"
SF_PATH="${SF_PATH:-"${XDG_DATA_HOME}/soundfonts"}"
SF="${SF:-"SC55.sf2"}"

fluidsynth -a alsa -m alsa_seq -i "${SF_PATH}/${SF}" "$@"

