[user]
	name = Guilherme M. Miranda
	email = alchemist.software@proton.me
[init]
	defaultBranch = main
[core]
	autocrlf = input
	editor = vim
	pager = less
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths = false
	branch = true
	short = true
	aheadBehind = true
	showStash = true
	showUntrackedFiles = normal
[log]
	date = iso8601
[pull]
	rebase = false
[merge]
	conflictstyle = diff3
[help]
	format = man
	browser = man
[alias]
	aa = add .
	st = status
	cm = commit -m
	qc = commit -m "changes"
	dc = diff --cached
	stash4later = stash --include-untracked
	log4me = log --decorate --oneline --graph
	log2short = shortlog --numbered --email --summary
	toptal = "!_gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; _gi"

