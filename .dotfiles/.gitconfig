[user]
	name = Guilherme M. Miranda
	email = alchemist.software@proton.me
	useConfigOnly = true
[init]
	defaultBranch = main
[core]
	autocrlf = input
	editor = vim
	eol = lf
	pager = less
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths = false
	branch = true
	short = true
	aheadBehind = true
	showStash = true
	showUntrackedFiles = normal
[log]
	date = iso8601
[pull]
	rebase = false
[merge]
	conflictstyle = diff3
[help]
	format = man
	browser = man
	autoCorrect = prompt
[alias]
	gl = !git config --global --list
	al = !git config --global --get-regexp alias | sed "s/alias\\.//g"
	aw = !git config --global --get-regexp alias | sed "s/alias\\.//g" | awk '{printf \"%-12s -> %s\\n\", $1, $0}'
	aa = !git add --all && git status
	st = !git status -uall
	ch = !git checkout \"$1\" && git status

	dica = !git diff --cached
	comm = !git commit --message
	quic = !git commit --message "changes"
	undo = !git reset --soft HEAD^
	reve = !git remote --verbose
	quik = !git aa && git quic && git push

	stash4later = !git stash --include-untracked
	fetch2date  = !git stash --include-untracked && git fetch && git status
	bring2date  = !git pull && git status

	log4me   = !git log --decorate --oneline --graph
	log2push = !git log origin/main..main --stat --no-merges
	log1prev = !git log -1 HEAD --stat

	toptal = "!_gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; _gi"

