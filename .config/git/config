[user]
	name = Guilherme M. Miranda
	email = alchemist.software@proton.me
	useConfigOnly = true
[init]
	defaultBranch = main
[core]
	editor = vim
	pager = less
	eol = lf
	autocrlf = input
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths = false
	branch = true
	aheadBehind = true
	showStash = true
	showUntrackedFiles = normal
[log]
	date = iso8601
[push]
	default = current
	autoSetupRemote = true
[pull]
	rebase = false
[merge]
	conflictstyle = diff3
[help]
	format = man
	browser = man
	autoCorrect = prompt
[alias]
	# List Config: General, Alias, Where, Enhanced
	list-global = !git config --list --global  | sed '/^alias/d'
	list-where  = !git config --list --show-origin
	list-alias  = !git config --global --get-regexp alias | sed 's/alias\\.//g'
	list-better = !git la | awk '{printf \"| %-12s | %s\\n\", $1, $0}' | sed '1,3d'

	# Basic Commands
	st = !git status --untracked-files=all --short --show-stash
	as = !git add --all && git status
	co = !git commit --message
	ca = !git commit --amend

	# Checkout, branching
	ch      = !git checkout
	ch-main = !git checkout main
	ch-prev = !git checkout -
	ch-new  = !git checkout -b
	br-all  = !git branch --list --all
	br-del  = !git branch --delete

	# Remote management
	url-all    = !git remote --verbose
	url-remote = !git remote get-url --all
	url-origin = !git remote get-url --all origin
	url-change = !git remote set-url --add origin

	# Undo
	undo       = !git reset --soft HEAD~1
	undo-clean = !git reset --hard HEAD~1

	# Updating
	fetch2date = !git stash --include-untracked && git fetch && git status
	pull2date  = !git stash --include-untracked && git pull  && git status

	# Logging
	log-prev = !git log -1 HEAD --stat
	log-all  = !git log --decorate --oneline --graph
	log-main = !git log main..origin/main --stat --no-merges
	log-head = !git log HEAD..origin/HEAD --stat --no-merges

	# Cloning GitHub
	hub      = !git clone https://github.com/$1
	hub-fs   = !git clone https://github.com/$1 $2
	hub-self = !git clone https://github.com/lambda-alchemist/$1
	hub-conf = !git clone https://github.com/lambda-alchemist/.dotfiles.git

	# Cloning GitLab
	lab      = !git clone https://gitlab.com/$1
	lab-fs   = !git clone https://gitlab.com/$1 $2
	lab-self = !git clone https://gitlab.com/alkemista1/$1
	lab-conf = !git clone https://gitlab.com/alkemista1/dotfiles.git

	# Generate .gitignore
	toptal = "!_toptal() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; _toptal"
