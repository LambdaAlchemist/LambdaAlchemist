[user]
	name  = Guilherme M. Miranda
	email = alchemist.software@proton.me
[init]
	defaultBranch = main
[core]
	editor   = vim
	pager    = less
	eol      = lf
	autocrlf = input
	safecrlf = true
	fileMode = true
[color]
	ui = auto
[status]
	relativePaths      = false
	branch             = true
	aheadBehind        = true
	showStash          = true
	showUntrackedFiles = normal
[log]
	date           = iso8601
	decorate       = short
	showSignatures = true
[diff]
	tool    = nvimdiff
	guitool = nvimdiff
[push]
	default         = current
	autoSetupRemote = true
[pull]
	ff     = true
	rebase = false
[merge]
	log           = false
	ff            = true
	tool          = nvimdiff
	guitool       = nvimdiff
	conflictstyle = merge
[help]
	format      = man
	browser     = man
	autoCorrect = prompt
[alias]
	# List Config: General, Alias, Where, Enhanced
	ls        = !git config --list --global             | sed '/^alias/d'
	ls-where  = !git config --list --show-origin        | sed '/^alias/d'
	ls-alias  = !git config --global --get-regexp alias | sed 's/alias\\.//g'
	ls-better = !git ls-alias | awk '{printf \"| %-12s | %s\\n\", $1, $0}' | sed '1,4d'

	# Basic Commands
	st = status --short --branch --ahead-behind --untracked-files=all
	as = add    .
	aa = add    --all
	ca = commit --amend
	ce = commit --amend --no-edit
	co = commit --message
	cm = commit --message "changes"
	dw = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'

	# Checkout, branching
	cb      = checkout
	cb-main = checkout main
	cb-prev = checkout -
	cb-new  = checkout -b
	cb-all  = branch --list --all
	cb-url  = branch --list --remotes
	cb-del  = branch --delete

	# Remotes management
	url     = remote
	url-all = remote --verbose
	url-get = remote get-url --all origin
	url-set = remote set-url origin
	url-add = remote set-url --add

	# Undo
	undo      = reset HEAD~1
	undo-soft = reset HEAD~1 --soft
	undo-hard = reset HEAD~1 --hard

	# Logging
	log-all  = log --oneline --graph
	log-stat = log --oneline --graph --stat
	log-prev = log --stat --decorate=full --full-diff --max-count=1 HEAD~1

	# Cloning GitHub
	hub      = "!_hub() { git clone git@github.com:$1; }; _hub"
	hub-self = "!_hub() { git clone git@github.com:lambda-alchemist/$1; }; _hub"

	# Generate .gitignore
	toptal = "!_toptal() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; _toptal"
